<?xml version="1.0" ?>
<!DOCTYPE config SYSTEM "/etc/iwatch/iwatch.dtd" >

<config charset="utf-8">
  <guard email="root@localhost" name="iWatch"/>
  <watchlist>
    <title>compress emails</title>
      <contactpoint email="root@localhost" name="Administrator"/>
    <path type="recursive" events="create" alert="off" filter="^(.)*C\.(.)*" syslog="on" exec="/usr/bin/mail_manager.sh %f">/var/spool/uucp/</path>
    <path type="single" events="create" alert="off" filter="^(.)*hmp" syslog="on" exec="echo %f | awk -F '/' '{print $NF;}' | xargs -I{} -r sh -c 'curl http://localhost/api/unpack/$(basename {}) -k'">/var/www/station-api/storage/app/inbox/</path>
  </watchlist>
</config>
