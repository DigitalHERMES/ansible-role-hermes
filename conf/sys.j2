time any

chat-timeout 200
call-login user
call-password pass

port HFP

forward *
commands rmail rnews crmail bash uucp uuadm ubitx_client sudo

protocol yi
protocol-parameter y packet-size 512
protocol-parameter y timeout 5400

system B0DE
{% if vara_callsign == 'B0DE' %}
alias local
{% else %}
alias gw
{% endif %}
alternate 
port TCP
address 10.8.0.10
chat "" \d\d\r\c ogin: \d\L word: \P

{% for n in range(1,15) %}
system B0DE-{{ n }}
{% if vara_callsign == 'B0DE-'+ n|string   %}
alias local
{% else %}
alias ac{{ n }}
{% endif %}
alternate 
port TCP
address 10.8.0.{{ n+10 }}
chat "" \d\d\r\c ogin: \d\L word: \P

{% endfor %}

system hermes
{% if vara_callsign == 'B0DE' %}
alias gw
{% else %}
alias central
{% endif %}
port TCP
chat "" \d\d\r\c ogin: \d\L word: \P
address 10.8.0.1

system B0DE-T
alias act
alternate 
port TCP
protocol i
address 10.8.0.28
chat "" \d\d\r\c ogin: \d\L word: \P

system B0DE-R
alias acr
alternate 
port TCP
protocol i
address 10.8.0.29
chat "" \d\d\r\c ogin: \d\L word: \P
