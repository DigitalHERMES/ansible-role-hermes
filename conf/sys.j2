time any

chat-timeout 200
call-login user
call-password pass
chat "" \r

port HFP

forward *
commands rmail rnews crmail bash uucp uuadm ubitx_client sudo

protocol yi
protocol-parameter y packet-size 512
protocol-parameter y timeout 5400

system {{ hermes_callsign}}
{% if hermes_callsign ==  vara_callsign  %} 
alias local
{% else %}
alias gw
{% endif %}
alternate 
port TCP
address 10.8.0.10
chat "" \d\d\r\c ogin: \d\L word: \P

{% for n in range(1,15) %}
system {{hermes_callsign }}-{{ n }}
{% if hermes_callsign == vara_callsign+ n|string   %}
alias local
{% else %}
alias ac{{ n }}
{% endif %}
alternate 
port TCP
{% if hermes_callsign == 'B0DE'%}}}
address 10.8.0.{{ n+10 }}
{% elif hermes_callsign == 'B0DK' %}}
address 10.8.0.{{ n+30 }}
{% endif %}
chat "" \d\d\r\c ogin: \d\L word: \P

{% endfor %}

system hermes
{% if hermes_callsign == vara_callsign %}
alias gw
{% else %}
alias central
{% endif %}
port TCP
chat "" \d\d\r\c ogin: \d\L word: \P
address 10.8.0.1

system {{ vara_callsign }}-T
alias act
alternate 
port TCP
protocol i
address 10.8.0.28
chat "" \d\d\r\c ogin: \d\L word: \P

system{{ vara_callsign }}-R
alias acr
alternate 
